<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="20dp" android:gravity="center">

    <TextView android:id="@+id/tvSummary" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="18sp" />

    <TextView android:id="@+id/tvTotal" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="22sp"
        android:textStyle="bold" android:layout_marginTop="10dp"/>
</LinearLayout>